<div id='form-signup'>
  <h3>Sign Up</h3>
  <p>Join our world!</p>

  <form>
      <input type="text" data-ui="input" name="id" placeholder="enter your phone number/email..." >
      <input type="text" data-ui="input" name="confirm_id" placeholder="enter your phone number/email..." >
      <input type="password" data-ui="input" name="password" placeholder="enter your password..." >
      <input type="password" data-ui="input" name="confirm_password" placeholder="confirm your password..." >
      <input class="waves-effect waves-light btn" type="submit"  data-ui="input" placeholder="SIGN UP">

      <div class="help-block hidden"></div>

  </form>
</div>
